<Window x:Class="SeznamLidi.Windows.CreateNewPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeznamLidi.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="AliceBlue"
        Title="CreateNewPersonWindow" Height="250" Width="360">
    <Grid>
        <Label Content="First Name:" HorizontalAlignment="Left" Margin="129,38,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="FN" HorizontalAlignment="Left" Margin="201,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Last Name:" HorizontalAlignment="Left" Margin="129,71,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="LN" HorizontalAlignment="Left" Margin="201,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Age:" HorizontalAlignment="Left" Margin="129,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="Age" HorizontalAlignment="Left" Margin="201,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="133,175,0,0" VerticalAlignment="Top" Width="100" Click="SaveButton_Click"/>
        <Button Content="Discard and Close" HorizontalAlignment="Left" Margin="250,175,0,0" VerticalAlignment="Top" Width="100"/>
        <Image Source="/Resources/add-user.png" HorizontalAlignment="Left" Height="100" Margin="19,42,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
